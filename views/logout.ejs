<section class="flex justify-center py-20">
  <div class="bg-white border rounded-lg p-6 flex flex-col items-center w-80">
    <h1 class="text-4xl font-bold text-emerald-600 mb-4"><%= title %></h1>
    <form
      action="/logout"
      method="POST"
      novalidate
      class="flex flex-col items-center space-y-4"
    >
      <p class="text-gray-700 text-center">Are you sure you want to log out?</p>
      <button
        type="submit"
        class="bg-emerald-600 font-bold text-white py-3 px-5 rounded hover:bg-emerald-700"
      >
        Log Out
      </button>
      <a
        href="/"
        class="px-4 py-2 text-gray-600 hover:text-gray-700 hover:underline"
      >
        Cancel
      </a>
    </form>
  </div>
</section>

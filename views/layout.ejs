<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body class="bg-gray-50">
    <% if (!user) { %>
    <nav class="bg-white border-b">
      <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="relative flex h-16 items-center justify-between">
          <div>
            <h2 class="font-bold px-3 text-2xl cursor-default text-emerald-600">
              File Uploader
            </h2>
          </div>
          <div class="hidden sm:block flex justify-center">
            <a
              href="/"
              class="px-3 py-2 rounded-lg block font-medium text-gray-900 hover:bg-gray-200 hover:text-black"
              >Overview</a
            >
          </div>
          <div
            class="absolute inset-y-0 right-0 flex gap-2 items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0"
          >
            <a
              href="/login"
              class="px-3 py-2 rounded-lg block font-medium text-gray-900 hover:bg-gray-200 hover:text-black"
              >Log In</a
            >
            <a
              href="/signup"
              class="px-3 py-2 rounded-lg block font-medium bg-emerald-600 text-white hover:bg-emerald-700"
              >Sign Up</a
            >
          </div>
        </div>
      </div>
    </nav>
    <% } else { %>
    <header
      class="relative flex flex-row md:flex-nowrap z-0 w-full bg-white border-b text-sm py-5 items-center"
    >
      <h2 class="font-bold px-3 text-2xl w-64 cursor-default text-emerald-600">
        File Uploader
      </h2>
      <div
        class="w-full flex items-center justify-between ms-auto px-6 md:px-60 gap-x-1 md:gap-x-3"
      >
        <input
          type="text"
          placeholder="Search"
          aria-label="Search files"
          class="block w-48 rounded-md border-0 p-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-neutral-600 sm:text-sm sm:leading-6"
        />
        <% if (user) { %>
        <div class="flex flex-row items-center space-x-4">
          <h2 class="font-medium text-lg"><%= user.ogName %></h2>
          <a
            href="/logout"
            class="px-3 py-2 rounded-lg font-bold text-gray-600 hover:bg-gray-200"
          >
            Log Out
          </a>
        </div>
        <% } %>
      </div>
    </header>
    <% } %>
    <div class="<%= user ? 'flex flex-row' : '' %>">
      <% if (user) { %>
      <aside
        class="flex flex-col w-64 h-screen overflow-y-auto bg-white border-r items-start py-6 text-pretty z-10"
      >
        <ul>
          <% folders.forEach(folder => { %>
          <li class="px-4 py-2 hover:bg-gray-200">
            <a href="/folders/<%= folder.id %>"> <%= folder.name %> </a>
          </li>
          <% }) %>
        </ul>
      </aside>
      <% } %>
      <main class="flex-grow"><%- body %></main>
    </div>
  </body>
</html>
